//Created on Mon March 26 2020//
//Variables Declared//
int l_motor = 0;
int r_motor = 2;
int speed = 50;
int right_eye = 6;
int right_eye_side = 2;
int left_eye_side = 0;
int left_eye = 5;
int pause =500;
int veer = 25;
int wall = 400;
int line = 700;
int wall2 = 190;
int middle_eye = 1;
int no_line = 0;
int speed2 = 60;
int l_bump = 8;
int r_bump = 9;
int veer2 = 30;
int speed3 = 0;
int wall3 = 800;
int speed4 = 45;
//Function Defenitions//
void forward(){//go forward
   motor(l_motor,speed);
   motor(r_motor,speed);

}
void r_veer(){//right veer
    motor(l_motor,speed);
    motor(r_motor,veer);
}
void l_veer(){//left veer
    motor(l_motor,veer);
    motor(r_motor,speed);
}
void r_turn(){ //right turn
   motor(l_motor,speed);
   motor(r_motor,-speed);
   msleep(pause);
}
void l_turn(){ //left turn
   motor(l_motor,-speed);
   motor(r_motor,speed);
   msleep(pause);
}
void l_turn2(){ // less of a left turn 
   motor(l_motor,-speed2);
   motor(r_motor,speed2);
   msleep(pause);
}
void r_veer2(){//right veer
    motor(l_motor,speed);
    motor(r_motor,veer2);
}
void l_veer2(){//left veer 2
    motor(l_motor,veer2);
    motor(r_motor,speed);
}
void l_turn3(){ // less of a left turn 
   motor(l_motor,-speed4);
   motor(r_motor,speed4);
   msleep(pause);
}
int main(){
while(analog(left_eye_side)>wall){//makes the bot follow the wall, once it reaches the wall it breaks out of the loop

	if (analog(right_eye_side)>wall){//when the right sensor is greater than the value it veers right 
	r_veer();
	}	
	if (analog(right_eye_side)<wall){//when the right sensor is less than the value it veers left
	l_veer();
	}	
	if(analog(middle_eye)<wall2){// when the middle sensor sees the wall it breaks the loop 
		break;
	}
}
l_turn2();
forward();
	
while(digital(l_bump)==no_line){//this loop is dependant on the left bump sensor
	forward();
	if (analog(left_eye)>line){//when the left tophat sensor is greater than the value of line it veers right
		printf("right veer\n");
	r_veer2();
	}	
	if (analog(left_eye)<line){// when the left tophat sensor is less than the value of the line it veers left 
		printf("left veer\n");
	l_veer();
	}
	if(analog(middle_eye)<wall2){//when the middle sensor sees the wall it breaks the loop 
		printf("turning\n");
		break;
	}
}
l_turn2();
forward();
msleep(pause);
while(analog(right_eye)<850){//this loop is dependant on the left bump sensor
	forward();
	if (analog(left_eye)>line){//when the left tophat sensor is greater than the value of line it veers right
		printf("right veer\n");
	r_veer2();
	}	
	if (analog(left_eye)<line){// when the left tophat sensor is less than the value of the line it veers left 
		printf("left veer\n");
	l_veer2();
	}

}
ao();
}

